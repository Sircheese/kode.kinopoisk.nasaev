<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kodekinopoisknasaev">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:label="com.kode.kinopoisk.nasaev">
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CitiesActivity"
            android:label="Выбрать город"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".GenresActivity"
            android:label="Выбрать жанр"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".CinemasActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".SeancesActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>